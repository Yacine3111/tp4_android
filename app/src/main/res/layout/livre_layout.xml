<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:id="@+id/livre_couverture"
        style="@style/livre_item_hauteur"
        android:layout_width="80dp"
        android:contentDescription="@string/contenu_description_photo_livre"

        />

    <LinearLayout
        android:layout_width="match_parent"
        style="@style/livre_item_hauteur"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_view_titre"
            style="@style/text_principal"
            />
        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tex_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            />

    </LinearLayout>

</LinearLayout>